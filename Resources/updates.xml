<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:annotation-config/>

    <bean id="update.record.list" class="java.lang.String">
        <constructor-arg value="UPDATE users SET listType = titleIDs WHERE id = :id"/>
    </bean>

    <bean id="add.to.users" class="java.lang.String">
        <constructor-arg value="INSERT INTO users (username, undecided, password, liked, disliked) VALUES (:username, :undecided, :password, 0, 0)"/>
    </bean>

</beans>