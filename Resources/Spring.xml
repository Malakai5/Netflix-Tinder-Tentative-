<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:annotation-config/>

    <bean id="get.all.records" class="java.lang.String">
        <constructor-arg value="SELECT * FROM netflix_titles"/>
    </bean>

    <bean id="add.to.profiles" class="java.lang.String">
        <constructor-arg value="INSERT INTO profile_list (user_name, password) VALUES (:username,:password)"/>
    </bean>
    <bean id="add.to.user" class="java.lang.String">
        <constructor-arg value="INSERT INTO user (username, undecided) VALUES (:username, :undecided)"/>
    </bean>
    <bean id="update.record.list" class="java.lang.String">
        <constructor-arg value="INSERT INTO user(:listType) VALUES (:titleIDs)"/>
    </bean>


</beans>